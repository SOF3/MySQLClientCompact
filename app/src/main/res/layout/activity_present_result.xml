<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".ui.server.result.PresentResultActivity">
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/PresentResult_QueryTitle"/>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
		<ScrollView
			android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1">
			<TextView android:id="@+id/PresentResult_Query"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:typeface="monospace"
			          android:textSize="@dimen/present_result_query_font"
			          android:fontFamily="monospace"/>
		</ScrollView>
		<Button android:id="@+id/PresentResult_Query_Copy"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@android:string/copy"/>
	</LinearLayout>
	<LinearLayout android:id="@+id/PresentResult_Body"
	              android:layout_width="match_parent"
	              android:layout_height="0dp"
	              android:layout_weight="1"
	              android:orientation="vertical"/>
</LinearLayout>

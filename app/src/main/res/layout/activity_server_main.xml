<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
	<android.support.design.widget.TabLayout
			android:id="@+id/ServerMain_TabLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
	<android.support.v4.view.ViewPager
			android:id="@+id/ServerMain_ViewPager"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"/>
	<TextView
			android:id="@+id/ServerMain_QueryLog_Title"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:text="@string/ServerMain_QueryLog_Title"/>
	<ScrollView
			android:id="@+id/ServerMain_QueryLog_Scroll"
			android:layout_width="match_parent"
			android:layout_height="@dimen/query_log_height"/>
</LinearLayout>
